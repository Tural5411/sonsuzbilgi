@model IEnumerable<SonsuzBlog.Models.tbl_users>

@{
    ViewBag.Title = "Istifadeciler";
    Layout = "~/Areas/AdminPanel/Views/Shared/_LayoutAdmin.cshtml";
}
<script>
    $(document).ready(function () {
        $('#myTable').dataTable(

            {
                "language": {
                    "sEmptyTable": "Cədvəldə heç bir məlumat yoxdur",
                    "sInfo": " _TOTAL_ Nəticədən _START_ - _END_ Arası Nəticələr",
                    "sInfoEmpty": "Nəticə Yoxdur",
                    "sInfoFiltered": "( _MAX_ Nəticə İçindən Tapılanlar)",
                    "sInfoPostFix": "",
                    "sInfoThousands": ",",
                    "sLengthMenu": "Səhifədə _MENU_ Nəticə Göstər",
                    "sLoadingRecords": "Yüklənir...",
                    "sProcessing": "Gözləyin...",
                    "sSearch": "Axtarış:",
                    "sZeroRecords": "Nəticə Tapılmadı.",
                    "oPaginate": {
                        "sFirst": "İlk",
                        "sLast": "Axırıncı",
                        "sNext": "Sonraki",
                        "sPrevious": "Öncəki"
                    },
                    "oAria": {
                        "sSortAscending": ": sütunu artma sırası üzərə aktiv etmək",
                        "sSortDescending": ": sütunu azalma sırası üzərə aktiv etmək"
                    }
                }
            }

        );


    })
</script>
<h2 style="font-size:28px;letter-spacing:3px; font-weight:900;text-transform:uppercase;">İstİfadəçİlər</h2>

<table id="myTable" class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soyad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                
                @Html.DisplayNameFor(model => model.Sifre)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QeydiyyatTarixi)
            </th>
            <th>
                <label>Müəllif</label>
            </th>
            <th>
                <label>Qebul edilmə</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ int a = 1;}
        @foreach (var item in Model)
        {
            <tr>
                <td>@a</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Soyad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sifre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QeydiyyatTarixi)
                </td>
                <td>

                    <a class="btn btn-outline-primary btn-rounded btn-fw" href="">@item.Yazar</a>
                </td>

                <td>
                    <a style="width:5px;" class="btn btn-outline-danger btn-rounded btn-fw">@item.QebulEdildi</a>
                </td>

                <td>
                    <a class="btn btn-info" href=" @Url.Action("IstifadeciEdit","Admin",new { id=item.UserId})">Edit</a>
                   
                </td>

            </tr>
            a++;
        }
    </tbody>
</table>
