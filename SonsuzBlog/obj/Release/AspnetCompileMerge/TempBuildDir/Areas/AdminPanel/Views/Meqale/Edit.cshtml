@model SonsuzBlog.Models.tbl_post
@{
    /**/

    ViewBag.Title = "Edit";
    Layout = "~/Areas/AdminPanel/Views/Shared/_LayoutAdmin.cshtml";
}
<h2 style="font-size:27px; letter-spacing:3px; font-weight:900;">EDİTLƏMƏ</h2>
<hr />
@using (Html.BeginForm("Edit", "Meqale", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-md-2">Başlıq</label>
        <div class="col-md-10">
            <input class="form-control" type="text" name="Baslig" value="@Model.Baslig" placeholder="Başlıq yaz" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Etiket yaz</label>
        <div class="col-md-10">
            @Html.DropDownList("EtiketId", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Ozet</label>
        <div class="col-md-10">
            <input class="form-control" type="text" name="Ozet" value="@Model.Ozet" />
        </div>
    </div>

    <div class="form-group">
            <label class="control-label col-md-2">Mətn</label>
            <div class="col-md-10">
                @Html.TextArea("Context")
            </div>
        </div>


    <div class="form-group">
        <label style="font-weight:900; letter-spacing:1px;" class="control-label col-md-2">Əvvəlki Şəkil</label>
        <div class="col-md-10">
            <img src="@Model.tbl_sekil.Boyuk" alt="Alternate Text" />
        </div>
    </div>

    <div class="form-group">
        <label style="font-weight:900; letter-spacing:1px;" class="control-label col-md-2">Yeni Şəkl Seç</label>
        <div class="col-md-10">
            <input class="form-control-file" type="file" name="sekil" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Kategoriya seç</label>
        <div class="col-md-10">
            @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Açar sözlər</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Keyword, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Keyword, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Əlavə et" class="btn btn-default" />
        </div>
    </div>
</div>
}