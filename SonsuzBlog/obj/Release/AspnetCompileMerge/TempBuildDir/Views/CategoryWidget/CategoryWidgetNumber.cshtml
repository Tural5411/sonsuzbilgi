@model IEnumerable<SonsuzBlog.Models.tbl_category>
@using SonsuzBlog.Helper
<aside style="position: unset;" class="widget widget-categories">
    <h4  class="widget-title">Kateqoriyalar</h4>
    <div class="widget-content">
        <ul>
          @foreach (var x in Model)
          {
            <li class="cat-item">
                <a href="/Category/@SeoHelper.ToSeoUrl(x.Ad).ToLower()-@x.CategoryId">@x.Ad<span class="count">@x.tbl_post.Count</span></a>
            </li>
          }
        </ul>
    </div>
</aside>
