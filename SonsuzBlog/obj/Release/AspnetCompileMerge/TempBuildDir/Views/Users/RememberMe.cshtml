<body>

    <div class="limiter">

        <div  class="container-login100">
            <div style="padding: 80px 130px 33px 95px; background:rgba(255, 255, 255, 0.32);" class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <a href="/"><img src="~/PublicFront/magala-html/assets/infinite_for_tural-0.png" alt="IMG"></a>
                </div>

                <form action="/Users/RememberMe" method="post" enctype="multipart/form-data" class="login100-form validate-form">
                    <span style="letter-spacing:2px; color:white; text-transform:uppercase;" class="login100-form-title">
                        Xatirla meni
                    </span>
                    <div class="wrap-input100 validate-input" data-validate="Məsələn=tural123@gmail.com">
                        @TempData["Remember"]
                        <input class="input100" type="email" name="email" required placeholder="Istifadeci maili">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="container-login100-form-btn">

                        <input class="login100-form-btn" type="submit" value="GONDER" />
                    </div>

                </form>
            </div>
        </div>
    </div>

