                            <!--Grid column-->
                            <div class="col-md-6">
                                <div class="md-form mb-0">
                                    <label for="email" class="">Email</label>
                                    <input type="text" id="email" name="email" class="form-control" required>
                                </div>
                            </div>
                            <!--Grid column-->

                        </div>
                        <!--Grid row-->
                        <!--Grid row-->
                        <div class="row">
                            <div class="col-md-12">
                                <div class="md-form mb-0">
                                    <label for="subject" class="">Başlıq</label>
                                    <input type="text" id="subject" name="baslig" class="form-control" required>
                                </div>
                            </div>
                        </div>
                        <!--Grid row-->
                        <!--Grid row-->
                        <div class="row">

                            <!--Grid column-->
                            <div class="col-md-12">

                                <div class="md-form">
                                    <label for="message">Mətn</label>
                                    <textarea type="text" id="message" name="metn" rows="2" class="form-control md-textarea" required></textarea>
                                </div>

                            </div>
                        </div>
                        <!--Grid row-->
                        <div class="text-center text-md-left pt-2">
                            <input style="color:white; border-radius:5px;" class="btn btn-primary " type="submit" name="name" value="GÖNDƏR" />
                        </div>
                        <div class="status pt-3">
                            @if (TempData["elaqe"] != null)
                            {
                                <div class="alert alert-info">@TempData["elaqe"]</div>
                            }
                        </div>
                    </form>


                </div>
                <!--Grid column-->
                <!--Grid column-->
                <div class="col-md-3 text-center">
