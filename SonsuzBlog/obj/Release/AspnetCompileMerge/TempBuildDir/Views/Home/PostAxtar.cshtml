@model IEnumerable<SonsuzBlog.Models.tbl_post>
@using SonsuzBlog.Helper
@{
    ViewBag.Title = "PostAxtar";
    Layout = "~/Views/Shared/_LayoutCategory.cshtml";
}
@foreach (var x in Model)
{
    <div class="col-lg-6 load-post">
        <article class="post hentry post-grid">
            <div class="entry-thumb">
                <figure class="thumb-wrap">
                    <a href="/Post/@SeoHelper.ToSeoUrl(x.Baslig).ToLower()-@x.PostId">
                        <img height="236" width="420" src="@x.tbl_sekil.Boyuk" alt="@x.Baslig">
                    </a>
                </figure><!--./ thumb-wrap -->
            </div><!--./ entry-thumb -->
            <div class="content-entry-wrap">
                <div class="entry-content">
                    <h3 class="entry-title">
                        <a href="/Post/@SeoHelper.ToSeoUrl(x.Baslig).ToLower()-@x.PostId">@x.Baslig</a>
                    </h3><!--./ entry-title -->
                </div><!--./ entry-content -->
                <div class="entry-meta-content">
                    <div class="entry-meta-author">
                        <div class="entry-author-thumb">
                        </div>
                        <div class="entry-author-name">
                            <a href="/Muellif/@SeoHelper.ToSeoUrl(x.tbl_users.Ad).ToLower()-@x.MuellifId">@x.tbl_users.Ad</a>
                        </div>
                    </div><!--./ entry-meta-author -->
                    <div class="entry-date">
                        <span>@x.Tarixi.Value.ToShortDateString()</span>
                    </div><!--./ entry-date -->
                    <div class="entry-category">
                        <a class="cat" href="/Category/@SeoHelper.ToSeoUrl(x.tbl_category.Ad).ToLower()-@x.CategoryId">@x.tbl_category.Ad</a>
                    </div><!--./ entry-category -->
                    <div class="entry-views">
                        <span> <i style="margin-right:2px;" class="fas fa-eye"></i>@x.Baxis</span>
                    </div>
                    <div class="entry-views">
                        <span><a class="beyen" data-id="@x.PostId" href="javascript:void(0)"><i style="margin-right:2px; color:#b11515;font-size:13px; font-weight:900;" class="fas fa-heart"></i></a>@x.Beyenme</span>
                    </div>
                </div><!--./ entry-meta-content -->
                <div class="entry-summary">
                </div><!--./ entry-summary -->
            </div><!--./ content-entry-wrap -->
        </article>
    </div>
}

