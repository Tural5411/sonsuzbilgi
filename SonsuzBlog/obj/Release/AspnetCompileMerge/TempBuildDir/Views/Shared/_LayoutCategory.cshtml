    <script>
        $(document).ready(function () {
            $("a.beyen").click(function () {
                var id = $(this).data("id");
                var link = "/Post/PostBeyen/" + id;
                var a = $(this);
                $.ajax({
                    type: "GET",
                    url: link,
                    success: function (result) {
                        a.html("<i style='margin-right:2px; color:#b11515; font-weight:900;' class='fas fa-heart'></i>" + result);
                        a.fadeOut(500);
                    }
                });
            });
        });
        function bax(id) {

            var link = "/Post/Baxildi/" + id;
            $.get(link);
        }
    </script>
